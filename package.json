{
  "name": "taskviewer",
  "displayName": "Task Viewer",
  "description": "Quick access to workspace tasks from and launch scripts from explorer sidebar",
  "version": "0.1.0",
  "publisher": "isopodlabs",
  "license": "MIT",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "tasks",
    "task runner",
    "workspace",
    "productivity",
    "build"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/adrianstephens/vscode-taskviewer.git"
  },
  "files": [
    "out/**/*.js",
    "assets/*",
    "LICENSE.txt"
  ],
  "contributes": {
    "configuration": {
      "title": "Task List",
      "properties": {
        "taskviewer.icons": {
          "type": "object",
          "description": "A mapping of strings to icon names.",
          "default": {
            "clean": "trash",
            "build": "package",
            "rebuild": "package",
            "test": "beaker",
            "before": "arrow-left",
            "after": "arrow-right",
            "debug": "bug",
            "launch": "rocket",
            "terminal": "terminal",
            "watch": "eye",
            "deploy": "cloud-upload",
            "start": "play",
            "stop": "stop",
            "publish": "cloud",
            "default": "gear"
          },
          "additionalProperties": {
            "type": "string",
            "description": "The icon name for the given string key."
          }
        },
        "taskviewer.colors": {
          "type": "object",
          "description": "A mapping of strings to colors.",
          "default": {
            "npm": "charts.red",
            "shell": "charts.blue",
            "typescript": "charts.purple",
            "gulp": "charts.orange",
            "grunt": "charts.yellow",
            "node": "charts.red",
            "extensionHost": "charts.blue",
            "chrome": "charts.green",
            "msedge": "charts.purple",
            "compound": "charts.blue",
            "default": "charts.yellow"
          },
          "additionalProperties": {
            "type": "string",
            "description": "The icon color for the given string key."
          }
        }
      }
    },
    "commands": [
      {
        "command": "tasks.refresh",
        "title": "Refresh Tasks",
        "icon": "$(refresh)"
      },
      {
        "command": "tasks.stop",
        "title": "Stop Task",
        "icon": "$(stop)"
      },
      {
        "command": "tasks.edit",
        "title": "Edit Task",
        "icon": "$(edit)"
      },
      {
        "command": "tasks.showLaunches",
        "title": "Show Launches",
        "icon": "$(bug)"
      },
      {
        "command": "tasks.hideLaunches",
        "title": "Hide Launches",
        "icon": "$(debug)"
      },
      {
        "command": "tasks.showConfig",
        "title": "Show Configured Tasks",
        "icon": "$(filter)"
      },
      {
        "command": "tasks.showAll",
        "title": "Show All Tasks",
        "icon": "$(filter-filled)"
      },
      {
        "command": "tasks.launchRefresh",
        "title": "Refresh Tasks",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "tasks.view",
          "name": "Tasks"
        }
      ],
      "debug": [
        {
          "id": "tasks.launchView",
          "name": "Launches"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "tasks.refresh",
          "when": "view == tasks.view",
          "group": "navigation@3"
        },
        {
          "command": "tasks.showAll",
          "when": "view == tasks.view && !taskviewer.all",
          "group": "navigation@2"
        },
        {
          "command": "tasks.showConfig",
          "when": "view == tasks.view && taskviewer.all",
          "group": "navigation@2"
        },
        {
          "command": "tasks.showLaunches",
          "when": "view == tasks.view && !taskviewer.launches",
          "group": "navigation@1"
        },
        {
          "command": "tasks.hideLaunches",
          "when": "view == tasks.view && taskviewer.launches",
          "group": "navigation@1"
        },
        {
          "command": "tasks.launchRefresh",
          "when": "view == tasks.launchView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "tasks.stop",
          "when": "(view == tasks.view || view == tasks.launchView) && viewItem == running",
          "group": "inline"
        },
        {
          "command": "tasks.edit",
          "when": "(view == tasks.view || view == tasks.launchView) && viewItem != noedit",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish patch",
    "generate-icons": "ts-node scripts/icons.ts node_modules/@vscode/codicons/src/icons assets/icons"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/codicons": "^0.0.36",
    "sharp": "^0.33.5",
    "ts-node": "^10.9.2"
  }
}
